<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginBottom="8dp"
              android:layout_marginLeft="6dp"
              android:layout_marginRight="6dp"
    >

    <TextView
        android:id="@+id/nosister_text_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是文本标题"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/nosister_text_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history"
            />
        <TextView
            android:id="@+id/nosister_text_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/nosister_text_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2010-10-10"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/nosister_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="林师傅就是浪费就是浪费就是浪费就算了浪费了时间弗拉索夫就是垃圾绿色减肥了司法解释"
        />
</LinearLayout>